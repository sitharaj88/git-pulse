    "views": {
      "git-nova-container": [
        {
          "id": "gitNova.sourceControl",
          "name": "Source Control",
          "icon": "$(source-control)",
          "contextualTitle": "GitNova"
        },
        {
          "id": "gitNova.changes",
          "name": "Changes",
          "icon": "$(diff)",
          "contextualTitle": "GitNova"
        },
        {
          "id": "gitNova.branches",
          "name": "Branches",
          "icon": "$(git-branch)",
          "contextualTitle": "GitNova"
        },
        {
          "id": "gitNova.commits",
          "name": "Commit History",
          "icon": "$(history)",
          "contextualTitle": "GitNova"
        },
        {
          "id": "gitNova.stashes",
          "name": "Stashes",
          "icon": "$(archive)",
          "contextualTitle": "GitNova"
        },
        {
          "id": "gitNova.remotes",
          "name": "Remotes",
          "icon": "$(cloud)",
          "contextualTitle": "GitNova"
        },
        {
          "id": "gitNova.tags",
          "name": "Tags",
          "icon": "$(tag)",
          "contextualTitle": "GitNova"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "gitNova.sourceControl",
        "contents": "No Git repository detected in the current workspace.\n[Initialize Repository](command:gitNova.init)\n[Clone Repository](command:gitNova.clone)\n\nLearn more about [Git](https://git-scm.com/doc).",
        "when": "!gitNova.hasRepository"
      },
      {
        "view": "gitNova.changes",
        "contents": "No changes detected.\nAll files are up to date.\n[Refresh](command:gitNova.refresh)",
        "when": "gitNova.hasRepository && gitNova.noChanges"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gitNova.sourceControl.sync",
          "when": "view == gitNova.sourceControl",
          "group": "navigation@1"
        },
        {
          "command": "gitNova.refresh",
          "when": "view == gitNova.sourceControl",
          "group": "navigation@2"
        },
        {
          "command": "gitNova.openGitGraph",
          "when": "view == gitNova.sourceControl",
          "group": "navigation@3"
        },
        {
          "command": "gitNova.commit.create",
          "when": "view == gitNova.changes",
          "group": "navigation@0"
        },
        {
          "command": "gitNova.remote.push",
          "when": "view == gitNova.changes",
          "group": "navigation@1"
        },
        {
          "command": "gitNova.stageAll",
          "when": "view == gitNova.changes",
          "group": "navigation@2"
        },
        {
          "command": "gitNova.unstageAll",
          "when": "view == gitNova.changes",
          "group": "navigation@3"
        },
        {
          "command": "gitNova.discardAllChanges",
          "when": "view == gitNova.changes",
          "group": "navigation@4"
        },
        {
          "command": "gitNova.changes.refresh",
          "when": "view == gitNova.changes",
          "group": "navigation@4"
        },
        {
          "command": "gitNova.branch.context.create",
          "when": "view == gitNova.branches",
          "group": "navigation@1"
        },
        {
          "command": "gitNova.branch.context.refresh",
          "when": "view == gitNova.branches",
          "group": "navigation@2"
        },
        {
          "command": "gitNova.branch.context.fetch",
          "when": "view == gitNova.branches",
          "group": "navigation@3"
        },
        {
          "command": "gitNova.tags.create",
          "when": "view == gitNova.tags",
          "group": "navigation@1"
        },
        {
          "command": "gitNova.refresh",
          "when": "view == gitNova.tags",
          "group": "navigation@2"
        },
        {
          "command": "gitNova.refresh",
          "when": "view == gitNova.commits",
          "group": "navigation@1"
        },
        {
          "command": "gitNova.openGitGraph",
          "when": "view == gitNova.commits",
          "group": "navigation@2"
        },
        {
          "command": "gitNova.refresh",
          "when": "view == gitNova.stashes",
          "group": "navigation@1"
        },
        {
          "command": "gitNova.stash.create",
          "when": "view == gitNova.stashes",
          "group": "navigation@2"
        },
        {
          "command": "gitNova.stash.clear",
          "when": "view == gitNova.stashes",
          "group": "navigation@3"
        },
        {
          "command": "gitNova.refresh",
          "when": "view == gitNova.remotes",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "gitNova.stageFile",
          "when": "view == gitNova.changes && viewItem == unstaged",
          "group": "inline@1"
        },
        {
          "command": "gitNova.discardChanges",
          "when": "view == gitNova.changes && viewItem == unstaged",
          "group": "inline@2"
        },
        {
          "command": "gitNova.unstageFile",
          "when": "view == gitNova.changes && viewItem == staged",
          "group": "inline@1"
        },
        {
          "command": "gitNova.stageFile",
          "when": "view == gitNova.changes && viewItem == untracked",
          "group": "inline@1"
        },
        {
          "command": "gitNova.discardChanges",
          "when": "view == gitNova.changes && viewItem == untracked",
          "group": "inline@2"
        },
        {
          "command": "gitNova.openFileDiff",
          "when": "view == gitNova.changes && (viewItem == staged || viewItem == unstaged || viewItem == untracked)",
          "group": "1_navigation@1"
        },
        {
          "command": "gitNova.openFile",
          "when": "view == gitNova.changes && (viewItem == staged || viewItem == unstaged || viewItem == untracked)",
          "group": "1_navigation@2"
        },
        {
          "command": "gitNova.revealInExplorer",
          "when": "view == gitNova.changes && (viewItem == staged || viewItem == unstaged || viewItem == untracked)",
          "group": "2_files@1"
        },
        {
          "command": "gitNova.copyPath",
          "when": "view == gitNova.changes && (viewItem == staged || viewItem == unstaged || viewItem == untracked)",
          "group": "2_files@2"
        },
        {
          "command": "gitNova.copyRelativePath",
          "when": "view == gitNova.changes && (viewItem == staged || viewItem == unstaged || viewItem == untracked)",
          "group": "2_files@3"
        },
        {
          "command": "gitNova.stageFile",
          "when": "view == gitNova.changes && viewItem == unstaged",
          "group": "3_staging@1"
        },
        {
          "command": "gitNova.unstageFile",
          "when": "view == gitNova.changes && viewItem == staged",
          "group": "3_staging@1"
        },
        {
          "command": "gitNova.discardChanges",
          "when": "view == gitNova.changes && (viewItem == unstaged || viewItem == untracked)",
          "group": "4_danger@1"
        },
        {
          "command": "gitNova.branch.context.switch",
          "when": "view == gitNova.branches && viewItem == branch",
          "group": "inline"
        },
        {
          "command": "gitNova.branch.context.create",
          "when": "view == gitNova.branches",
          "group": "1_branchActions@1"
        },
        {
          "command": "gitNova.branch.context.delete",
          "when": "view == gitNova.branches && viewItem == branch",
          "group": "1_branchActions@2"
        },
        {
          "command": "gitNova.branch.context.rename",
          "when": "view == gitNova.branches && viewItem == branch",
          "group": "1_branchActions@3"
        },
        {
          "command": "gitNova.branch.context.merge",
          "when": "view == gitNova.branches && viewItem == branch",
          "group": "2_branchOperations@1"
        },
        {
          "command": "gitNova.branch.context.compare",
          "when": "view == gitNova.branches && viewItem == branch",
          "group": "2_branchOperations@2"
        },
        {
          "command": "gitNova.branch.context.push",
          "when": "view == gitNova.branches && viewItem == branch",
          "group": "3_sync@1"
        },
        {
          "command": "gitNova.branch.context.pull",
          "when": "view == gitNova.branches && viewItem == branch",
          "group": "3_sync@2"
        },
        {
          "command": "gitNova.branch.context.track",
          "when": "view == gitNova.branches && viewItem == branch",
          "group": "3_sync@3"
        },
        {
          "command": "gitNova.branch.context.untrack",
          "when": "view == gitNova.branches && viewItem == branch",
          "group": "3_sync@4"
        },
        {
          "command": "gitNova.tags.checkout",
          "when": "view == gitNova.tags && viewItem == tag",
          "group": "inline@1"
        },
        {
          "command": "gitNova.tags.delete",
          "when": "view == gitNova.tags && viewItem == tag",
          "group": "1_tagActions@1"
        },
        {
          "command": "gitNova.tags.push",
          "when": "view == gitNova.tags && viewItem == tag",
          "group": "1_tagActions@2"
        },
        {
          "command": "gitNova.stash.context.apply",
          "when": "view == gitNova.stashes && viewItem == stash",
          "group": "inline@1"
        },
        {
          "command": "gitNova.stash.context.pop",
          "when": "view == gitNova.stashes && viewItem == stash",
          "group": "inline@2"
        },
        {
          "command": "gitNova.stash.context.drop",
          "when": "view == gitNova.stashes && viewItem == stash",
          "group": "inline@3"
        },
        {
          "command": "gitNova.stash.context.showDetails",
          "when": "view == gitNova.stashes && viewItem == stash",
          "group": "more@1"
        },
        {
          "command": "gitNova.stash.context.create",
          "when": "view == gitNova.stashes && viewItem == root",
          "group": "actions@1"
        },
        {
          "command": "gitNova.stash.context.clear",
          "when": "view == gitNova.stashes && viewItem == root",
          "group": "actions@2"
        }
      ]
    },
    "configuration": {
      "title": "GitNova",
      "properties": {
        "gitNova.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh git status"
        },
        "gitNova.refreshInterval": {
          "type": "number",
          "default": 60000,
          "description": "Auto-refresh interval in milliseconds"
        },
        "gitNova.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show status bar items"
        },
        "gitNova.defaultBranchName": {
          "type": "string",
          "default": "main",
          "description": "Default branch name"
        },
        "gitNova.showRemoteBranches": {
          "type": "boolean",
          "default": true,
          "description": "Show remote branches in tree view"
        },
        "gitNova.branchSortOrder": {
          "type": "string",
          "enum": [
            "recent",
            "name",
            "date"
          ],
          "default": "recent",
          "description": "Branch sort order"
        },
        "gitNova.commitMessageTemplate": {
          "type": "string",
          "default": "",
          "description": "Commit message template"
        },
        "gitNova.showCommitGraph": {
          "type": "boolean",
          "default": true,
          "description": "Show commit graph visualization"
        },
        "gitNova.commitDisplayFormat": {
          "type": "string",
          "enum": [
            "full",
            "compact"
          ],
          "default": "full",
          "description": "Commit display format"
        },
        "gitNova.diffViewMode": {
          "type": "string",
          "enum": [
            "unified",
            "side-by-side"
          ],
