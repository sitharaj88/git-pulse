{
  "name": "git-nova",
  "displayName": "GitNova",
  "description": "Visualise and manage your Git workflow with a rhythm. The heartbeat of your codebase.",
  "version": "1.0.3",
  "publisher": "sitharaj",
  "repository": {
    "type": "git",
    "url": "https://github.com/sitharaj88/git-nova.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sitharaj88/git-nova/issues"
  },
  "homepage": "https://github.com/sitharaj88/git-nova#readme",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "version control",
    "branch",
    "commit",
    "merge",
    "rebase",
    "stash",
    "diff"
  ],
  "activationEvents": [
    "onLanguage:git-commit",
    "onLanguage:git-rebase",
    "onLanguage:diff",
    "onCommand:gitNova.init",
    "onCommand:gitNova.clone",
    "onView:gitNova.sourceControl",
    "onView:gitNova.changes",
    "onView:gitNova.branches",
    "onView:gitNova.commits",
    "onView:gitNova.stashes",
    "onView:gitNova.remotes",
    "onView:gitNova.tags",
    "workspaceContains:.git"
  ],
  "main": "./out/extension.js",
  "icon": "resources/icons/logo.png",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "git-nova-container",
          "title": "GitNova",
          "icon": "resources/icons/activity-bar.svg"
        }
      ]
    },
    "commands": [
